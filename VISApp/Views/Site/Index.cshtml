@model Curate.AI.Models.Site

@{
    ViewData["Title"] = "Curate.AI";
}

<div class="container mt-5">
    <h1 class="text-center">Upload Your Image</h1>
    <div class="card shadow-lg">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="file" class="form-control-file" name="file" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Upload</button>
            </form>
        </div>
    </div>
</div>

<div class="container mt-5 text-center">
    <svg width="100" height="100" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM12 20C7.59 20 4 16.41 4 12C4 7.59 7.59 4 12 4C16.41 4 20 7.59 20 12C20 16.41 16.41 20 12 20ZM11 7H13V13H11V7ZM11 15H13V17H11V15Z" fill="#007bff" />
    </svg>
    <p id="animated-text" class="mt-3"></p>
</div>

<div class="container mt-5">
    <h2>Generative AI: Converting Ideas into Fashion Models</h2>
    <p id="animated-blog"></p>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const text = "Generative AI is transforming the fashion industry by enabling designers to transform their creative ideas into stunning fashion models. Using advanced algorithms, generative AI can create new designs, patterns, and even entire garments, offering unprecedented creative freedom and efficiency. This technology is not just a futuristic concept but a practical tool already making waves in fashion design studios around the world. For instance, Generative Adversarial Networks (GANs) can generate highly realistic images by learning from existing fashion images. This allows designers to explore new design concepts and create unique fashion pieces that push the boundaries of traditional fashion. The ability to generate diverse and inclusive models representing various races, sizes, and abilities helps showcase products better and cater to a broader audience. Overall, generative AI is a gamechanger for the fashion industry, bringing novelty, personalization, and efficiency to the design process.";
            let index = 0;
            const speed = 30; // typing speed in milliseconds

            function typeWriter() {
                if (index < text.length) {
                    document.getElementById("animated-blog").innerHTML += text.charAt(index);
                    index++;
                    setTimeout(typeWriter, speed);
                }
            }

            typeWriter();
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
