@model CurateAI.Models.UserDetails

@{
    ViewData["Title"] = "UpdateProfile";
}

<h1>Update User Profile</h1>
<hr />
Enter User Details
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="User_First_Name" class="control-label"></label>
                <input asp-for="User_First_Name" class="form-control" />
                <span asp-validation-for="User_First_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User_Last_Name" class="control-label"></label>
                <input asp-for="User_Last_Name" class="form-control" />
                <span asp-validation-for="User_Last_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User_EmailId" class="control-label"></label>
                <input asp-for="User_EmailId" class="form-control" />
                <span asp-validation-for="User_EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User_Password" class="control-label"></label>
                <input asp-for="User_Password" class="form-control" />
                <span asp-validation-for="User_Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
